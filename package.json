{
  "name": "abortable-promise-cache",
  "version": "1.5.0",
  "description": "add AbortController support to a cache of async requests",
  "license": "MIT",
  "repository": "rbuels/abortable-promise-cache",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "author": {
    "name": "Robert Buels",
    "email": "rbuels@gmail.com",
    "url": "https://github.com/rbuels"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist",
    "esm"
  ],
  "scripts": {
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "lint": "eslint src test",
    "docs": "documentation readme --shallow src/AbortablePromiseCache.js --section=API",
    "clean": "rimraf dist esm",
    "prebuild": "npm run clean",
    "build:esm": "tsc --target es2018 --outDir esm",
    "build:es5": "tsc --target es5 --outDir dist",
    "build": "npm run build:esm && npm run build:es5",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "postpublish": "git push --tags origin master"
  },
  "keywords": [],
  "dependencies": {
    "abortcontroller-polyfill": "^1.2.9"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^12.0.12",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "documentation": "^13.2.5",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "quick-lru": "^2.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
